                <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
                    <table>

                        @{
                           
                            if (Model != null)
                            {
                                foreach (var Data in Model)
                                {
                                    String image = Data.Image;
                                    <tr>
                                        <div class="col-lg-6 menu-item filter-@Data.Catagory">
                                            <img src=" @image " class="menu-img" alt="">
                                            <div class="menu-content">
                                                @{
                                                    String TempFoodName = Data.FoodName;
                                                }
                                                <a>@Html.ActionLink(TempFoodName, "CartPopUp", "Home", new { CartFoodId = Data.FoodId, CartImage = image, CartFoodName = Data.FoodName, CartFoodInfo = Data.About, CartFoodPrice = Data.Price }, null)</a><span>₺@Data.Price</span>

                                            </div>
                                            <div class="menu-ingredients">
                                                @Data.About
                                            </div>
                                        </div>
                                    </tr>
                                }
                            }
                        }

                    </table>
